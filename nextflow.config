
manifest{
    name = 'Cyclomics/realtime_epi2me_tests'
    author = 'Cyclomics'
    homePage = 'http://cyclomics.com'
    description = 'Run a dummy pipeline until a file called DONE.pod5 is in the input folder.'
    mainScript      = 'main.nf'
    nextflowVersion = '>=20.10.0'
    version         = '0.9.2'
}

epi2melabs {
    outdirParam = 'output_dir'
    tags = "Realtime tests"
    icon = "faCircleNotch"
}


docker.enabled = true
default_container = 'damicyclomics/cyclomicseq:0.8.0'
process.container = default_container

timeline {
  enabled = true
  overwrite = true
  file = "${params.output_dir}/execution/timeline.html"
}
report {
  enabled = true
  overwrite = true
  file = "${params.output_dir}/execution/report.html"
}
trace {
  enabled = true
  overwrite = true
  file = "${params.output_dir}/execution/trace.txt"
}
